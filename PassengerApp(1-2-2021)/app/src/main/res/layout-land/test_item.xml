<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContaner"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">




        <LinearLayout
            android:layout_gravity="top"
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:background="@color/appThemeColor_1"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/backArrowImgView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical|start"
                android:layout_weight="0"
                android:rotationY="@integer/angle_rtl_180"
                android:src="@mipmap/ic_back_arrow"
                android:tint="@color/white" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_margin="@dimen/_2sdp"
                android:orientation="horizontal"
                android:background="@drawable/round_with_gray_stroke"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|start">

                <ImageView
                    android:id="@+id/search_iv"
                    android:background="@drawable/green_search"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </ImageView>


                <EditText

                    android:id="@+id/titleTxtView"
                    android:layout_width="match_parent"
                    android:ellipsize="end"

                    android:layout_height="wrap_content"
                    android:tag="Search"

                    android:maxLines="1"
                    android:background="@null"

                    android:textColorHint="@color/gray"

                    android:textColor="@color/appThemeColor_1"
                    android:textSize="@dimen/_12ssp"
                    android:visibility="visible" />

            </LinearLayout>






            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:padding="7dp"
                android:tint="@color/white"
                android:visibility="gone" />

            <com.like.LikeButton
                android:id="@+id/likeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:backgroundTint="@color/white"
                android:textAlignment="viewEnd"
                app:anim_scale_factor="2.5"
                app:icon_size="22dp"
                app:icon_type="heart"
                app:is_enabled="true"
                app:like_drawable="@drawable/heart_on_fav_store"
                app:unlike_drawable="@drawable/heart_off_fav_store" />



            <ImageView
                android:visibility="gone"
                android:id="@+id/rightFoodImgView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:padding="7dp"
                android:tint="@color/white"
                app:srcCompat="@mipmap/ic_search_food_delievery" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/infoImage"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/ic_information" />

            </LinearLayout>
             </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_below="@id/header"
        android:layout_height="match_parent">






    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="@dimen/_5sdp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/appThemeColor_1"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">




            <LinearLayout
                app:layout_collapseMode="parallax"
                android:id="@+id/nestedscroll"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/app_bar_layout"


                android:background="@color/white"

                android:visibility="visible">

                <LinearLayout
                    android:background="#F3F3F5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F3F3F5"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior">

                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_90sdp"
                            android:background="@color/app_login_box_color">

                        </RelativeLayout>


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_3sdp"
                            android:elevation="@dimen/_5sdp"
                            app:cardCornerRadius="@dimen/_10sdp">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/_5sdp">


                                <TextView
android:fontFamily="@font/creem_font"
                                    android:id="@+id/reco_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="normal">

                                </TextView>

                                <TextView
android:fontFamily="@font/creem_font"
                                    android:id="@+id/reco_decvd"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/reco_name"
                                    android:layout_centerInParent="true"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:text=""
                                    android:textColor="@color/gray_text"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="italic" />


                                <LinearLayout
                                    android:id="@+id/data_lay"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_below="@+id/reco_decvd"
                                    android:orientation="horizontal"
                                    android:weightSum="3">


                                    <RelativeLayout

                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_margin="@dimen/_3sdp"
                                        android:layout_weight="1">


                                        <RelativeLayout
                                            android:layout_width="1dp"
                                            android:layout_height="match_parent"
                                            android:layout_alignParentEnd="true"
                                            android:background="@color/gray">

                                        </RelativeLayout>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:orientation="vertical">

                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_horizontal"
                                                android:orientation="horizontal">


                                                <ImageView
                                                    android:layout_width="@dimen/_15sdp"
                                                    android:layout_height="@dimen/_15sdp"
                                                    android:background="@drawable/green_star">

                                                </ImageView>


                                                <TextView
android:fontFamily="@font/creem_font"
                                                    android:id="@+id/reco_ratingText"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginStart="@dimen/_2sdp"
                                                    android:gravity="center_horizontal"
                                                    android:text="0.0"
                                                    android:textColor="@color/black"
                                                    android:textStyle="normal">

                                                </TextView>

                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_horizontal">

                                                <TextView
android:fontFamily="@font/creem_font"
                                                    android:id="@+id/rating_tvL"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="Rating"
                                                    android:textColor="@color/gray_text"
                                                    android:textSize="@dimen/_10sdp"
                                                    android:textStyle="italic">

                                                </TextView>


                                            </LinearLayout>

                                        </LinearLayout>


                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="0dp"

                                        android:layout_height="match_parent"
                                        android:layout_margin="@dimen/_3sdp"
                                        android:layout_weight="1">

                                        <RelativeLayout
                                            android:layout_width="1dp"
                                            android:layout_height="match_parent"
                                            android:layout_alignParentEnd="true"
                                            android:background="@color/gray">

                                        </RelativeLayout>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:orientation="vertical">

                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_horizontal"
                                                android:gravity="center_horizontal">

                                                <TextView
android:fontFamily="@font/creem_font"
                                                    android:id="@+id/reco_dev_time_text"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="20 Min"
                                                    android:textColor="@color/black">

                                                </TextView>

                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content">

                                                <TextView
android:fontFamily="@font/creem_font"
                                                    android:id="@+id/dev_time_tvL"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="Delivery Time"
                                                    android:textColor="@color/gray_text"
                                                    android:textSize="@dimen/_10sdp"
                                                    android:textStyle="italic">

                                                </TextView>


                                            </LinearLayout>

                                        </LinearLayout>


                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="0dp"

                                        android:layout_height="match_parent"
                                        android:layout_margin="@dimen/_3sdp"
                                        android:layout_weight="1">


                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:orientation="vertical">

                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_horizontal"
                                                android:gravity="center_horizontal">

                                                <TextView
android:fontFamily="@font/creem_font"
                                                    android:id="@+id/reco_order_price"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:text=""
                                                    android:textColor="@color/black">

                                                </TextView>

                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_horizontal"
                                                android:gravity="center_horizontal">


                                                <TextView
android:fontFamily="@font/creem_font"
                                                    android:id="@+id/dev_price_tvL"
                                                    android:layout_width="wrap_content"

                                                    android:layout_height="wrap_content"
                                                    android:text="Delivery Price"
                                                    android:textColor="@color/gray_text"
                                                    android:textSize="@dimen/_10sdp">

                                                </TextView>

                                            </LinearLayout>

                                        </LinearLayout>

                                    </RelativeLayout>


                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="vertical"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/data_lay"
                                    android:visibility="visible">

                                    <TextView
android:fontFamily="@font/creem_font"
                                        android:id="@+id/paymentMethodHeder"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:gravity="center"
                                        android:text=""
                                        android:textColor="@color/black">

                                    </TextView>

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/res_pay_recucler"
                                        android:layout_width="match_parent"
                                        app:spanCount="2"
                                        android:layout_gravity="center"

                                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                                        android:layout_height="wrap_content">

                                    </androidx.recyclerview.widget.RecyclerView>
                                    <!--     <TextView
android:fontFamily="@font/creem_font"
                                             android:layout_below="@id/paymentMethodHeder"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:layout_centerInParent="true"
                                             android:layout_margin="@dimen/_5sdp"
                                             android:gravity="center_horizontal"
                                             android:text="dummy payment Method"
                                             android:textColor="@color/black">

                                         </TextView>-->


                                </LinearLayout>

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>


                    </RelativeLayout>





                    <LinearLayout
                        android:id="@+id/reco_lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F3F3F5"
                        android:orientation="vertical"
                        >


                        <TextView
android:fontFamily="@font/creem_font"
                            android:id="@+id/reco_TV_recoAdp"
                            android:background="#F3F3F5"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="normal"

                            android:textColor="@color/black"

                            android:text="">

                        </TextView>

                        <androidx.recyclerview.widget.RecyclerView

                            android:id="@+id/recoemended_recyclerView"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:background="#F3F3F5">

                        </androidx.recyclerview.widget.RecyclerView>

                        <FrameLayout

                            android:id="@+id/frm"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior"

                            android:layout_below="@id/app_bar_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout

                                android:id="@+id/addviewsLayout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/background_screen"
                                android:orientation="vertical">


                                <com.google.android.material.tabs.TabLayout
                                    android:id="@+id/sliding_tabs"
                                    style="@style/MyTabLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:background="@color/background_screen"
                                    android:visibility="visible"
                                    app:tabBackground="@drawable/tab_background"
                                    app:tabIndicator="@null"
                                    app:tabMode="scrollable"
                                    app:tabSelectedTextColor="@color/white"
                                    app:tabTextColor="#000" />




                            </LinearLayout>

                        </FrameLayout>

                    </LinearLayout>





                </LinearLayout>
            </LinearLayout>



        </com.google.android.material.appbar.CollapsingToolbarLayout>



             </com.google.android.material.appbar.AppBarLayout>




            <androidx.recyclerview.widget.RecyclerView


                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:id="@+id/resMenuRecyclerview"
                android:layout_width="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_height="wrap_content"
                android:paddingBottom="50dp" />

            <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:scaleType="centerCrop"
        android:src="@drawable/download_new"
        android:visibility="gone"
        app:layout_collapseMode="parallax" />

          <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_collapseMode="pin">

        <LinearLayout

            android:id="@+id/resNameView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
android:fontFamily="@font/creem_font"
                        android:id="@+id/restNametxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:gravity="start"
                        android:maxLines="2"
                        android:text=""
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:tag="@string/robotobold"
                        app:textAllCaps="true" />

                    <TextView
android:fontFamily="@font/creem_font"
                        android:id="@+id/restcusineNameTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="start"
                        android:maxLines="2"
                        android:text=""
                        android:textColor="#a0a0a0"
                        android:textSize="10sp"
                        android:tag="@string/robotobold" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/resDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <com.view.DividerView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layerType="software"
                android:src="@drawable/dotted" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:paddingBottom="15dp">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:tint="@color/appThemeColor_1"
                                app:srcCompat="@drawable/ic_star_black_24dp" />

                            <TextView
android:fontFamily="@font/creem_font"
                                android:id="@+id/ratingCntTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/txt_size_16"
                                android:tag="@string/robotobold" />
                        </LinearLayout>

                        <TextView
android:fontFamily="@font/creem_font"
                            android:id="@+id/ratingdecTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text=""
                            android:textColor="#a0a0a0"
                            android:textSize="@dimen/txt_size_12"
                            android:tag="@string/robotobold" />

                    </LinearLayout>

                </LinearLayout>


                <com.view.DividerView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    app:dividerOrientation="vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
android:fontFamily="@font/creem_font"
                            android:id="@+id/deliveryValTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_size_16"
                            android:tag="@string/robotobold" />

                        <TextView
android:fontFamily="@font/creem_font"
                            android:id="@+id/deliveryLBLTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text=""
                            android:textColor="#a0a0a0"
                            android:textSize="@dimen/txt_size_12"
                            android:tag="@string/robotobold" />

                    </LinearLayout>

                </LinearLayout>

                <com.view.DividerView
                    android:id="@+id/minDivider"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    app:dividerOrientation="vertical" />

                <LinearLayout
                    android:id="@+id/minOrderArea"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
android:fontFamily="@font/creem_font"
                            android:id="@+id/minOrderValTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_size_16"
                            android:tag="@string/robotobold" />

                        <TextView
android:fontFamily="@font/creem_font"
                            android:id="@+id/minOrderLBLTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text=""
                            android:textColor="#a0a0a0"
                            android:textSize="@dimen/txt_size_12"
                            android:tag="@string/robotobold" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <com.view.DividerView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layerType="software"
                android:src="@drawable/dotted" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/offerArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
android:fontFamily="@font/creem_font"
                android:id="@+id/offerMsgTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:maxLines="2"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textAlignment="center"
                android:textColor="#8a584b"
                android:textSize="@dimen/txt_size_12"
                android:tag="@string/robotomediumFont" />

            <com.view.DividerView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layerType="software"
                android:src="@drawable/dotted" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/VegNovegFilterArea"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:paddingEnd="15dp"
            android:paddingBottom="5dp"
            android:visibility="gone">

            <TextView
android:fontFamily="@font/creem_font"
                android:id="@+id/foodTypetxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="start|center"
                android:paddingStart="10dp"
                android:text="Veg Only"
                android:textAlignment="viewStart"
