<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:innerRadius="0dp"
    android:id="@+id/bannerAreaContainerView"
    android:shape="rectangle"
    android:layout_margin="15dp"
    android:clipToPadding="true"
    app:cardCornerRadius="@dimen/_20sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_170sdp"
        android:layout_gravity="center"
        android:background="@drawable/j_round">

        <ImageView

            android:id="@+id/bannerImgView"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"


            android:adjustViewBounds="true"
            android:src="@drawable/testbanner"
            android:contentDescription="@string/app_name"
             />

        <TextView
android:fontFamily="@font/creem_font"
            android:id="@+id/serviceNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/_20sdp"
            android:alpha=".8"
            android:background="@color/appThemeColor_1"
            android:clickable="false"
            android:focusable="false"
            android:maxWidth="250dp"
            android:maxLines="2"
            android:paddingStart="10dp"
            android:paddingTop="2dp"
            android:paddingEnd="10dp"
            android:paddingBottom="2dp"
            android:text="Book Now"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_16"
            android:visibility="gone" />

        <TextView
android:fontFamily="@font/creem_font"
            android:id="@+id/bookNowTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/_20sdp"
            android:background="@color/appThemeColor_2"
            android:clickable="false"
            android:focusable="false"
            android:maxLines="1"
            android:padding="@dimen/_5sdp"
            android:text="Book Now"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_16"
            android:visibility="gone" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>