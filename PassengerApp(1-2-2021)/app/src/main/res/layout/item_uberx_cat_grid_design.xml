<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="5dp"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:padding="2dp">


    <LinearLayout
        android:id="@+id/contentArea"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="2dp">

        <ImageView
            android:id="@+id/catImgView"
            android:layout_width="@dimen/category_grid_size"
            android:layout_height="@dimen/category_grid_size"
            android:background="@drawable/square_round_shape"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_no_icon" />

        <TextView
android:fontFamily="@font/creem_font"
            android:id="@+id/uberXCatNameTxtView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:gravity="center|top"
            android:maxLines="2"
            android:textColor="#000000"
            android:textSize="@dimen/txt_size_14"
            app:autoSizeMaxTextSize="14sp"
            app:autoSizeMinTextSize="8sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform" />


    </LinearLayout>
</LinearLayout>