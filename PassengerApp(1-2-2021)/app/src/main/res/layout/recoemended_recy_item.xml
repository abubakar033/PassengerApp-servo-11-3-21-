<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_7sdp"
    android:layout_margin="@dimen/_5sdp"


    xmlns:app="http://schemas.android.com/apk/res-auto">


<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">



    <LinearLayout
        android:background="@drawable/round_white_back"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/reco_ll_expand_lay"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_3sdp"

        android:visibility="visible">

        <ImageView
            android:layout_margin="@dimen/_2sdp"
            android:id="@+id/reco_iv_img_icon1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/above_shadow" />

      <LinearLayout
          android:layout_margin="@dimen/_3sdp"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <ImageView
              android:visibility="gone"
              android:id="@+id/reco_foodType_IV"
              android:layout_gravity="center"
              android:layout_width="@dimen/_10sdp"
              android:layout_height="@dimen/_10sdp">

          </ImageView>

          <TextView
android:fontFamily="@font/creem_font"

              android:layout_gravity="center"
              android:id="@+id/_reco_tv_item_name1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:ellipsize="end"
              android:tag=""
              android:maxLines="1"
              android:layout_marginStart="@dimen/_2sdp"
              android:textColor="@color/black"
              android:textSize="@dimen/_12sdp"
              android:textStyle="normal" />

      </LinearLayout>

        <TextView
android:fontFamily="@font/creem_font"
            android:id="@+id/reco_tv_description1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:ellipsize="end"
            android:layout_margin="@dimen/_3sdp"
            android:tag=""
            android:maxLines="2"
            android:textSize="@dimen/_10sdp"
            android:textStyle="normal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            >

            <TextView
android:fontFamily="@font/creem_font"
                android:id="@+id/reco_tv_new_price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="$ 2.30"
                android:layout_centerInParent="true"
                android:textColor="@color/appThemeColor_Dark_1"
                android:textSize="@dimen/_10sdp"
                android:textStyle="normal" />

            <LinearLayout
                android:id="@+id/reco_addLayout1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:background="#229608"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <TextView
android:fontFamily="@font/creem_font"
                    android:id="@+id/addtext"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="normal" />

                <ImageView
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    app:srcCompat="@drawable/cart_white" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
</androidx.cardview.widget.CardView>