<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#f2f2f4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
android:fontFamily="@font/creem_font"
                        app:textAllCaps="true"
                        android:id="@+id/sendMoneyTxt"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginStart="15dp"
                        android:gravity="start|center"
                        android:maxLines="1"
                        android:text=""
                        android:textAlignment="viewStart"
                        android:textColor="@color/appThemeColor_1"
                        android:textSize="@dimen/txt_size_16" />


                        <ImageView
                            android:visibility="gone"
                            android:padding="10dp"
                            android:src="@drawable/ic_back_arrow"
                            android:id="@+id/ic_back_arrow"
                            android:layout_width="45dp"
                            android:layout_height="35dp" />


                </LinearLayout>



                <TextView
android:fontFamily="@font/creem_font"
                    android:id="@+id/transferMoneyTagTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="start|center"
                    android:text=""
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    android:textSize="@dimen/txt_size_16" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/transferMoneySelectDetailArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="8dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
android:fontFamily="@font/creem_font"
                            android:id="@+id/enterDetailTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="start|center"
                            android:text=""
                            android:textAlignment="viewStart"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_size_14"
                            android:tag="@string/robotomediumFont" />


                        <RadioGroup
                            android:id="@+id/rg_transferType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:orientation="horizontal"
                            android:paddingStart="5dp"
                            android:paddingTop="8dp"
                            android:paddingEnd="5dp"
                            android:paddingBottom="15dp">

                            <RadioButton
                                android:id="@+id/emailRadioBtn"
                                style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:buttonTint="@color/appThemeColor_1"
                                android:paddingStart="10dp"
                                android:text=""
                                android:textAlignment="viewStart"
                                android:textAllCaps="true"
                                android:textColor="#2F2F2F"
                                android:textSize="@dimen/txt_size_14" />

                            <RadioButton
                                android:id="@+id/phoneRadioBtn"
                                style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:buttonTint="@color/appThemeColor_1"
                                android:paddingStart="10dp"
                                android:text=""
                                android:textAlignment="viewStart"
                                android:textAllCaps="true"
                                android:textColor="#2F2F2F"
                                android:textSize="@dimen/txt_size_14" />

                        </RadioGroup>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/toWhomTransferArea"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="8dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
android:fontFamily="@font/creem_font"
                                android:id="@+id/whomTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:gravity="start|center"
                                android:text=""
                                android:textAlignment="viewStart"
                                android:textColor="@color/black"
                                android:textSize="@dimen/txt_size_14"
                                android:tag="@string/robotomediumFont" />


                            <RadioGroup
                                android:id="@+id/rg_whomType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:orientation="horizontal"
                                android:paddingStart="5dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="5dp"
                                android:paddingBottom="15dp">

                                <RadioButton
                                    android:id="@+id/userRadioBtn"
                                    style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:buttonTint="@color/appThemeColor_1"
                                    android:paddingStart="10dp"
                                    android:text=""
                                    android:textAlignment="viewStart"
                                    android:textAllCaps="true"
                                    android:textColor="#2F2F2F"
                                    android:textSize="@dimen/txt_size_14" />

                                <RadioButton
                                    android:id="@+id/driverRadioBtn"
                                    style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:buttonTint="@color/appThemeColor_1"
                                    android:paddingStart="10dp"
                                    android:text=""
                                    android:textAlignment="viewStart"
                                    android:textAllCaps="true"
                                    android:textColor="#2F2F2F"
                                    android:textSize="@dimen/txt_size_14" />

                            </RadioGroup>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/userDetailArea"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="8dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
android:fontFamily="@font/creem_font"
                            android:id="@+id/transferMoneyTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text=""
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_size_14"
                            android:tag="@string/robotomediumFont"
                           />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="8dp"
                            android:paddingStart="5dp"
                            android:paddingTop="15dp"
                            android:paddingEnd="5dp"
                            android:paddingBottom="15dp">

                            <com.view.SelectableRoundedImageView
                                android:id="@+id/toUserImgView"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="start|center"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/ic_no_pic_user"
                                app:sriv_border_color="@android:color/transparent"
                                app:sriv_border_width="2dip"
                                app:sriv_left_bottom_corner_radius="20dip"
                                app:sriv_left_top_corner_radius="20dip"
                                app:sriv_oval="true"
                                app:sriv_right_bottom_corner_radius="20dip"
                                app:sriv_right_top_corner_radius="20dip" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="15dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
android:fontFamily="@font/creem_font"
                                    android:id="@+id/userNameTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="start|center"
                                    android:maxLines="1"
                                    android:text="Jarvish"
                                    android:textAlignment="viewStart"

                                    android:textColor="@color/black"
                                    android:textSize="@dimen/txt_size_16"
                                    android:tag="@string/robotomediumFont" />

                                <TextView
android:fontFamily="@font/creem_font"
                                    android:id="@+id/userType"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="start|center"
                                    android:maxLines="1"
                                    android:text="Driver"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/txt_size_10"
                                    android:tag="@string/robotomediumFont" />


                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/moneyDetailArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="10dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/all_btn_height"
                        android:layout_gravity="center"
                        android:gravity="center">


                        <TextView
android:fontFamily="@font/creem_font"
                            android:id="@+id/moneyTitleTxt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="60"
                            android:gravity="end|center"
                            android:maxLines="1"
                            android:textAlignment="viewEnd"
                            android:textAllCaps="true"
                            android:textColor="@color/appThemeColor_1"
                            android:textSize="@dimen/txt_size_16"
                            app:textAllCaps="true" />

                        <TextView
android:fontFamily="@font/creem_font"
                            android:id="@+id/moneyAmountTxt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="30"
                            android:gravity="start|center"
                            android:maxLines="1"
                            android:textAlignment="viewStart"
                            android:textColor="@color/appThemeColor_1"
                            android:textSize="@dimen/txt_size_16" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/transferMoneyAddDetailArea"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="8dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <LinearLayout
                            android:id="@+id/enterDetailArea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp">


                            <include
                                android:id="@+id/detailBox"
                                layout="@layout/editbox_form_design"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp" />


                            <include
                                android:id="@+id/amountBox"
                                layout="@layout/editbox_form_design"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:visibility="gone" />


                            <FrameLayout
                                android:id="@+id/verificationArea"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <include
                                    android:id="@+id/verificationCodeBox"
                                    layout="@layout/editbox_form_design"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp" />

                                <LinearLayout
                                    android:id="@+id/infoArea"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:layout_gravity="end|center"
                                    android:layout_marginEnd="8dp"
                                    android:gravity="end|center"
                                    android:visibility="visible">

                                    <ImageView
                                        android:id="@+id/infoimage"
                                        android:layout_width="18dp"
                                        android:layout_height="18dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="5dp"
                                        app:srcCompat="@drawable/ic_information" />
                                </LinearLayout>


                            </FrameLayout>

                            <include
                                android:id="@+id/verificationCodeBox"
                                layout="@layout/editbox_form_design"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:visibility="gone" />





                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_gravity="end|center"
                        android:id="@+id/resendOtpArea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end|center"
                        android:visibility="gone">

                        <TextView
android:fontFamily="@font/creem_font"
                            android:clickable="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:id="@+id/resendOtpTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:gravity="end|center"
                            android:maxLines="1"
                            android:text=""
                            android:tag="@string/robotobold"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/appThemeColor_1"
                            android:textSize="@dimen/txt_size_16" />


                        <ImageView
                            android:clickable="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:tint="@color/appThemeColor_1"
                            android:padding="10dp"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="end|center"
                            android:src="@drawable/ic_resend" />
                    </LinearLayout>

                    <TextView
android:fontFamily="@font/creem_font"
                        android:id="@+id/otpInfoTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="start|center"
                        android:maxLines="1"
                        android:text="Kindly check your registered email or phone number to get OTP.	"
                        android:textAlignment="viewStart"
                        android:textColor="@color/red"
                        android:textSize="@dimen/txt_size_10"
                        android:visibility="gone" />


                </LinearLayout>

                <include
                    android:id="@+id/btn_type3"
                    layout="@layout/btn_type_2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/all_btn_height"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="8dp" />


            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>