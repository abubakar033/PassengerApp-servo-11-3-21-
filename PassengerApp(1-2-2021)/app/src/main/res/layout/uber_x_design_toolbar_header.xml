<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/appThemeColor_1"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backImgViewuberx"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0"
                android:src="@mipmap/ic_back_arrow"
                android:tint="@color/appThemeColor_TXT_1" />

            <TextView
android:fontFamily="@font/creem_font"
                android:id="@+id/titleTxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:paddingStart="10dp"
                android:textAlignment="viewStart"
                android:textColor="@color/appThemeColor_TXT_1"
                android:textSize="@dimen/txt_size_18" />

            <TextView
android:fontFamily="@font/creem_font"
                android:id="@+id/subTitleTxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end|center_vertical"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textAlignment="viewEnd"
                android:textColor="@color/appThemeColor_TXT_1"
                android:textSize="@dimen/txt_size_16"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/switchArea"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:animateLayoutChanges="true"
                android:gravity="end|center"
                android:visibility="visible">

                <TextView
android:fontFamily="@font/creem_font"
                    android:id="@+id/listTxt"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@color/mdtp_white"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="List"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_size_16" />

                <TextView
android:fontFamily="@font/creem_font"
                    android:id="@+id/mapTxt"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@color/appThemeColor_1"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Map"
                    android:textAllCaps="true"
                    android:textColor="@color/mdtp_white"
                    android:textSize="@dimen/txt_size_16" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/UberxProviderswitchArea"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:animateLayoutChanges="true"
                android:background="@drawable/roundrect"
                android:gravity="end|center"
                android:visibility="gone">


                <ImageView
                    android:id="@+id/listImage"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:src="@mipmap/ic_list" />

                <ImageView
                    android:id="@+id/mapImage"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/appThemeColor_1"
                    android:gravity="center"
                    app:srcCompat="@mipmap/ic_map" />

                <ImageView
                    android:id="@+id/filterImage"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@color/appThemeColor_1"
                    android:gravity="center"
                    app:srcCompat="@mipmap/ic_filter" />


            </LinearLayout>
        </LinearLayout>


    </androidx.appcompat.widget.Toolbar>
</com.google.android.material.appbar.AppBarLayout>