<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
android:fontFamily="@font/creem_font"
        android:id="@+id/titleTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="start"
        android:text=" "
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="@dimen/txt_size_14"
        android:tag="@string/robotobold" />

    <TextView
android:fontFamily="@font/creem_font"
        android:id="@+id/detailsTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="start"
        android:maxLines="3"
        android:text=" "
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="@dimen/txt_size_14"
        android:tag="@string/robotolightFont" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
android:fontFamily="@font/creem_font"
            android:id="@+id/dateTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:text=" "
            android:textAlignment="viewStart"
            android:textColor="@color/bt_text_blue"
            android:textSize="@dimen/txt_size_14"
            android:tag="@string/robotomediumFont" />

        <TextView
android:fontFamily="@font/creem_font"
            android:id="@+id/readMoreTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text=" "
            android:textAlignment="viewStart"
            android:textColor="@color/bt_text_blue"
            android:textSize="@dimen/txt_size_14"
            android:tag="@string/robotomediumFont" />

    </LinearLayout>

</LinearLayout>
