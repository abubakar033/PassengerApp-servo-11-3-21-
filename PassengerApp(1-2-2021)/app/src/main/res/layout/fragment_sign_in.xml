<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:background="@color/white"
    android:elevation="@dimen/_4sdp"
    android:orientation="vertical"
    tools:context="com.fragments.SignInFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailBoxTIP"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"


            app:boxStrokeColor="@color/app_login_box_color">

            <EditText
                android:id="@+id/emailBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/creem_font"
                android:tag="" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--    <include
                android:id="@+id/emailBox"
                layout="@layout/editbox_form_design"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />-->


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordBoxTIP"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"


            app:boxStrokeColor="@color/app_login_box_color">

            <EditText
                android:id="@+id/passwordBox"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/creem_font"
                android:tag="" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--<include
            android:id="@+id/passwordBox"
            layout="@layout/editbox_form_design"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />-->
    </LinearLayout>


    <RelativeLayout

        android:id="@+id/btn_type2"
        android:layout_width="match_parent"

        android:layout_height="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/add_button_green">

        <TextView
            android:id="@+id/reg_btn_text"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/creem_font"
            android:text=""
            android:textColor="@color/white"
            android:textStyle="normal">

        </TextView>

    </RelativeLayout>
    <!--   <include
           android:id="@+id/btn_type2"
           layout="@layout/btn_type_2"
           android:layout_width="match_parent"
           android:layout_height="@dimen/all_btn_height"
           android:layout_alignParentBottom="true"
           android:layout_gravity="bottom"
           android:layout_marginEnd="19dp"
           android:layout_marginStart="19dp"
           android:layout_marginTop="49dp" />-->

    <TextView
        android:id="@+id/forgetPassTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:fontFamily="@font/creem_font"
        android:gravity="center"
        android:tag="roboto_light"
        android:textAllCaps="true"
        android:textColor="@color/appThemeColor_1"
        android:textSize="@dimen/txt_size_14" />

    <TextView

        android:id="@+id/registerTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/creem_font"
        android:gravity="center"
        android:tag="roboto_light"
        android:text="Don't have an account?"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_size_20" />
</LinearLayout>
