<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#D8D8D8">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/headerArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@color/white"
            android:orientation="horizontal">


            <TextView
android:fontFamily="@font/creem_font"
                android:id="@+id/chooseImgHTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:text="Choose Category"
                android:textAlignment="viewStart"
                android:textColor="@color/appThemeColor_1"
                android:textSize="@dimen/txt_size_16"
                android:tag="@string/robotobold" />

            <ImageView

                android:id="@+id/closeDialogImgView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_rm_dest" />


        </LinearLayout>


        <LinearLayout

            android:id="@+id/cameraGallaryArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headerArea"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:elevation="0dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:id="@+id/cameraArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"

                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/cameraIconImgView"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_camera"
                        android:tint="@color/appThemeColor_Dark_1" />

                    <TextView
android:fontFamily="@font/creem_font"
                        android:id="@+id/cameraTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:text=""
                        android:textAlignment="viewStart"
                        android:textColor="#2F2F2F"
                        android:textSize="@dimen/txt_size_14"
                        android:tag="@string/robotobold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:elevation="0dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:id="@+id/galleryArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"

                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/galleryIconImgView"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:padding="4dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_gallery"
                        android:tint="@color/appThemeColor_Dark_1" />

                    <TextView
android:fontFamily="@font/creem_font"
                        android:id="@+id/galleryTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:text=""
                        android:textAlignment="viewStart"
                        android:textColor="#2F2F2F"
                        android:textSize="@dimen/txt_size_14"
                        android:tag="@string/robotobold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <LinearLayout

            android:id="@+id/prescriptionArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cameraGallaryArea"
            android:layout_margin="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"

                android:elevation="0dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:padding="5dp">

                    <ImageView

                        android:id="@+id/prescriptionIconImgView"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:padding="8dp"
                        android:scaleType="centerCrop"
                        android:tint="@color/appThemeColor_Dark_1"
                        app:srcCompat="@drawable/ic_medical_prescription"

                        />

                    <TextView
android:fontFamily="@font/creem_font"
                        android:id="@+id/prescriptionTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginStart="5dp"
                        android:text=""
                        android:textAlignment="viewStart"
                        android:textColor="#2F2F2F"
                        android:textSize="@dimen/txt_size_14"
                        android:tag="@string/robotobold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>