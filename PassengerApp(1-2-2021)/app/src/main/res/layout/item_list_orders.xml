<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/restaurantAdptrLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="3dp"
            app:cardElevation="2dp"
            app:contentPadding="5dp">


            <LinearLayout
                android:id="@+id/dataArea"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">


                <TextView
android:fontFamily="@font/creem_font"
                    android:id="@+id/orderStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:gravity="end|center"
                    android:text="Burger King"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_size_14"
                    android:visibility="gone"
                    android:tag="@string/robotobold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/OrderHotelImage"
                            android:layout_width="@dimen/dimen_50"
                            android:layout_height="@dimen/dimen_50"
                            android:scaleType="fitXY"
                            android:src="@drawable/aburgerking" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <TextView
android:fontFamily="@font/creem_font"
                                android:id="@+id/orderHotelName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5dp"
                                android:layout_marginStart="5dp"
                                android:gravity="start|center"
                                android:text="Burger King"

                                android:textAlignment="viewStart"
                                android:textColor="@color/black"
                                android:textSize="@dimen/txt_size_16"
                                android:tag="@string/robotobold" />

                            <TextView
android:fontFamily="@font/creem_font"
                                android:id="@+id/orderHotelAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5dp"
                                android:layout_marginStart="5dp"
                                android:gravity="start|center"
                                android:text="Shymal Cross Road nShymall,Ahemedabad,India"
                                android:textAlignment="viewStart"

                                android:textColor="@color/black"
                                android:textSize="@dimen/txt_size_14"
                                android:tag="@string/robotolightFont" />
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
android:fontFamily="@font/creem_font"
                                android:id="@+id/orderDateHTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_marginEnd="5dp"
                                android:layout_marginStart="5dp"
                                android:gravity="start|center"
                                android:text="Order At"
                                android:textColor="@color/black"
                                android:textSize="@dimen/txt_size_14"
                                android:tag="@string/robotolightFont" />

                            <TextView
android:fontFamily="@font/creem_font"
                                android:id="@+id/orderDateVTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5dp"
                                android:layout_marginStart="5dp"
                                android:gravity="start|center"
                                android:text="Mar 10,2018 02:14 PM"

                                android:textColor="@color/black"
                                android:textSize="@dimen/txt_size_14"
                                android:tag="@string/robotobold" />


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
android:fontFamily="@font/creem_font"
                                android:id="@+id/totalHtxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5dp"
                                android:layout_marginStart="5dp"
                                android:gravity="end|center"
                                android:text="Total"
                                android:textAlignment="viewEnd"
                                android:textColor="@color/black"
                                android:textSize="@dimen/txt_size_14"
                                android:tag="@string/robotolightFont" />

                            <TextView
android:fontFamily="@font/creem_font"
                                android:id="@+id/totalVtxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5dp"
                                android:layout_marginStart="5dp"
                                android:gravity="end|center"
                                android:text="$45"
                                android:textAlignment="viewEnd"
                                android:textColor="@color/appThemeColor_1"
                                android:textSize="@dimen/txt_size_14"
                                android:tag="@string/robotobold" />


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <LinearLayout

                        android:orientation="horizontal"
                        android:id="@+id/TrackOrderBtnArea"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
android:fontFamily="@font/creem_font"
                            android:id="@+id/btn_trackOrder"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentBottom="true"


                            android:gravity="center"

                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/txt_size_16"
                            android:background="@color/black" />

                        <TextView
android:fontFamily="@font/creem_font"
                            android:id="@+id/btn_pickuped"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentBottom="true"

                            android:text="Received"
                            android:gravity="center"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/txt_size_16"
                            android:background="@color/appThemeColor_1" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/vieDetailsArea"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone">

                        <TextView
android:fontFamily="@font/creem_font"
                            android:id="@+id/btn_viewDetails"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentBottom="true"

                            android:background="@color/black"
                            android:gravity="center"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/txt_size_16"

                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="visible">

                        <TextView
android:fontFamily="@font/creem_font"
                            android:id="@+id/btn_help"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="bottom"
                            android:layout_marginStart="5dp"
                            android:background="@drawable/login_form_border"
                            android:gravity="center"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_size_16"

                            />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <ImageView
        android:id="@+id/tagImage"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/tag"
        android:visibility="gone" />


    <TextView
android:fontFamily="@font/creem_font"
        android:visibility="gone"
        android:id="@+id/serviceNameTxt"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:gravity="start|center"
        android:maxLines="1"
        android:text="Recommende"
        android:textAlignment="viewStart"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:tag="@string/robotomediumFont" />
</RelativeLayout>



