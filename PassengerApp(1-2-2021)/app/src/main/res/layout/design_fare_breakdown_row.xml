<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/seperatorView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="8dp"
        android:background="#dddddd"
        android:visibility="gone" />

    <TableLayout
        android:orientation="horizontal"
        android:id="@+id/fair_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:stretchColumns="1,1">

        <TableRow
            android:id="@+id/FareDetailRow"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
android:fontFamily="@font/creem_font"
                android:id="@+id/titleHTxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:paddingBottom="3dp"
                android:text="Fare"
                android:textAlignment="viewStart"
                android:textColor="#696969"
                android:textSize="@dimen/txt_size_16"
                android:tag="roboto_light" />

            <TextView
android:fontFamily="@font/creem_font"
                android:id="@+id/titleVTxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.40"
                android:gravity="end|center_vertical"
                android:paddingBottom="3dp"
                android:text=" $2"
                android:textAlignment="viewEnd"
                android:textColor="#000000"
                android:textSize="@dimen/txt_size_16"
                android:textStyle="normal"
                android:tag="roboto_light" />
        </TableRow>
    </TableLayout>

</LinearLayout>