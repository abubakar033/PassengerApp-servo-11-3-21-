<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/topArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <include
                android:id="@+id/toolbar_include"
                layout="@layout/deliverall_design_toolbar_general" />
        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topArea">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ozaydin.serkan.com.image_zoom_view.ImageViewZoom
                    android:id="@+id/iv_food_item_picture"
                    android:padding="@dimen/_10sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/ic_no_shopping_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_270sdp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
android:fontFamily="@font/creem_font"
                            android:id="@+id/vItemNameTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:ellipsize="end"
                            android:textAlignment="viewStart"
                            android:textColor="#000000"
                            android:textStyle="normal"
                            android:textSize="@dimen/txt_size_14"
                            android:visibility="gone"
                            android:tag="@string/robotobold" />



                        <LinearLayout
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginStart="5dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/vegImage"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                android:src="@drawable/veg"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/nonvegImage"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                android:src="@drawable/nonveg"
                                android:visibility="gone" />

                            <TextView
android:fontFamily="@font/creem_font"
                                android:id="@+id/vegNonvegTxtView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start|center"
                                android:paddingStart="10dp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black"
                                android:textSize="@dimen/txt_size_12"
                                android:tag="@string/robotolightFont" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
android:fontFamily="@font/creem_font"
                                android:id="@+id/baseFareHTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:maxLines="3"
                                android:textAlignment="viewStart"
                                android:textColor="#000000"
                                android:textSize="@dimen/txt_size_14"
                                android:tag="@string/robotomediumFont" />

                            <TextView
android:fontFamily="@font/creem_font"
                                android:id="@+id/baseFareVTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:layout_marginStart="10dp"
                                android:textAlignment="viewEnd"
                                android:textColor="#000000"
                                android:textSize="@dimen/txt_size_14"
                                android:tag="@string/robotomediumFont" />


                        </LinearLayout>

                        <TextView
android:fontFamily="@font/creem_font"
                            android:id="@+id/vItemDecTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:ellipsize="end"
                            android:textAlignment="viewStart"
                            android:textColor="@color/darkgray"
                            android:textSize="@dimen/_10ssp"
                            android:visibility="visible"
                            android:tag="@string/robotobold" />




                        <LinearLayout
                            android:id="@+id/optionArea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
android:fontFamily="@font/creem_font"
                                android:id="@+id/optionTitleTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:textAlignment="viewStart"

                                android:textColor="@color/appThemeColor_1"
                                android:textSize="@dimen/txt_size_14"
                                android:tag="@string/robotobold" />

                            <LinearLayout
                                android:id="@+id/optionContainer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"></LinearLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/topingArea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
android:fontFamily="@font/creem_font"
                                android:id="@+id/topingTitleTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/appThemeColor_1"
                                android:textSize="@dimen/txt_size_14"
                                android:tag="@string/robotobold" />

                            <LinearLayout
                                android:id="@+id/topingContainer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            </LinearLayout>


                        </LinearLayout>
                        <TextView
android:fontFamily="@font/creem_font"
                            android:textAlignment="viewStart"
                            android:id="@+id/totalPriceTxt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1"
                            android:gravity="start|center"
                            android:text="123"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_12ssp"
                            android:tag="@string/robotobold" />

                    </LinearLayout>




                </LinearLayout>


                <LinearLayout
                    android:id="@+id/qtyArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">


                    <!-- fixme abubakar baskit design-->
                    <LinearLayout
                        android:weightSum="5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
android:fontFamily="@font/creem_font"
                            android:id="@+id/quantityTxtView"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/all_TxtView_height"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/mdtp_white"
                            android:gravity="start|center"
                            android:paddingStart="10dp"
                            android:text="Quantity"
                            android:textAlignment="viewStart"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_size_16"
                            android:textStyle="normal"
                            android:visibility="gone" />

                        <LinearLayout


                            android:id="@+id/countingArea"
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"
                            android:layout_gravity="start|center"
                            android:gravity="start|center"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:orientation="horizontal"

                            android:visibility="visible">

                            <RelativeLayout

                                android:background="@drawable/additemshape"
                                android:id="@+id/minusarea"
                                android:elevation="@dimen/_5sdp"

                                android:clickable="true"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:padding="5dp">

                                <ImageView
                                    android:layout_centerInParent="true"
                                    android:id="@+id/minusImgView"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:clickable="false"
                                    android:gravity="center"
                                    app:srcCompat="@drawable/ic_minus" />
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginStart="20dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
android:fontFamily="@font/creem_font"
                                    android:id="@+id/QTYNumberTxtView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="1"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/txt_size_14" />

                            </LinearLayout>

                            <RelativeLayout
                                android:background="@drawable/additemshape"
                                android:id="@+id/addarea"
                                android:clickable="true"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:padding="5dp">

                                <ImageView

                                    android:layout_centerInParent="true"
                                    android:id="@+id/addImgView"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:clickable="false"
                                    app:srcCompat="@drawable/ic_add" />
                            </RelativeLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="wrap_content">

                        </LinearLayout>


                        <RelativeLayout
                            android:id="@+id/bottomCartView"
                            android:background="@drawable/add_button_green"
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_centerInParent="true"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
android:fontFamily="@font/creem_font"

                                    android:id="@+id/addItemCartBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="5dp"
                                    android:background="@drawable/add_button_green"

                                    android:clickable="true"
                                    android:gravity="center"
                                    android:maxLines="1"

                                    android:text="add"
                                    android:textAllCaps="true"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"

                                    android:tag="@string/robotobold"
                                    app:textAllCaps="true" />

                                <ImageView
                                    android:layout_gravity="center"
                                    android:background="@drawable/shopping_cart_24"
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp">

                                </ImageView>
                            </LinearLayout>

                        </RelativeLayout>


                        <!--
-->


                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"

                    android:orientation="horizontal"
                    android:paddingEnd="20dp"
                    android:paddingStart="10dp">

                    <TextView
android:fontFamily="@font/creem_font"
                        android:id="@+id/totalHTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center"
                        android:text="Total"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_size_18"
                        android:textStyle="normal"
                        android:visibility="gone" />


                </LinearLayout>

            </LinearLayout>
        </ScrollView>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:background="@color/appThemeColor_1"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
android:fontFamily="@font/creem_font"
                android:textAlignment="viewStart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:gravity="start|center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="15sp"
                android:tag="@string/robotobold" />

            <TextView
android:fontFamily="@font/creem_font"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:background="@drawable/additemshape"

                android:clickable="false"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:paddingBottom="5dp"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:text="add Item"
                android:textAllCaps="true"
                android:textColor="@color/appThemeColor_1"
                android:textSize="15sp"

                android:tag="@string/robotobold"
                app:textAllCaps="true" />


        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
