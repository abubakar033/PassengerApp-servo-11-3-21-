<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContaner"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">


    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_32sdp"
        android:layout_gravity="top"
        android:background="@color/appThemeColor_1"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/backArrowImgView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|start"
            android:layout_weight="0"
            android:rotationY="@integer/angle_rtl_180"
            android:src="@mipmap/ic_back_arrow"
            android:tint="@color/white" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="1"

            android:background="@drawable/round_with_gray_stroke"
            android:gravity="center|start"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/search_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:background="@drawable/green_search">

            </ImageView>


            <EditText

                android:id="@+id/titleTxtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ellipsize="end"
                android:maxLines="1"
                android:tag="Search"
                android:textColor="@color/appThemeColor_1"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/_12ssp"
                android:visibility="visible" />

        </LinearLayout>


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:padding="7dp"
            android:tint="@color/white"
            android:visibility="gone" />

        <com.like.LikeButton
            android:id="@+id/likeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:backgroundTint="@color/white"
            android:textAlignment="viewEnd"
            app:anim_scale_factor="2.5"
            app:icon_size="22dp"
            app:icon_type="heart"
            app:is_enabled="true"
            app:like_drawable="@drawable/heart_on_fav_store"
            app:unlike_drawable="@drawable/heart_off_fav_store" />


        <ImageView
            android:id="@+id/rightFoodImgView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:padding="7dp"
            android:tint="@color/white"
            android:visibility="gone"
            app:srcCompat="@mipmap/ic_search_food_delievery" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="7dp">

            <ImageView
                android:id="@+id/infoImage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_information" />

        </LinearLayout>
    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header">


        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:elevation="@dimen/_5sdp"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/appThemeColor_1"
                android:fitsSystemWindows="true"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">


                <LinearLayout
                    android:id="@+id/nestedscroll"
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    android:layout_below="@+id/app_bar_layout"
                    android:background="@color/white"


                    android:visibility="visible"

                    app:layout_collapseMode="parallax">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#F3F3F5"
                        android:orientation="vertical">


                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#F3F3F5"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior">

                            <RelativeLayout

                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_90sdp"
                                android:background="@color/app_login_box_color">

                            </RelativeLayout>


                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_3sdp"
                                android:elevation="@dimen/_5sdp"
                                app:cardCornerRadius="@dimen/_10sdp">


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/_5sdp">


                                    <TextView
                                        android:id="@+id/reco_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:layout_centerInParent="true"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        android:fontFamily="@font/creem_font"
                                        android:text=""
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_14sdp"
                                        android:textStyle="normal" />

                                    <TextView
                                        android:id="@+id/reco_decvd"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/reco_name"
                                        android:layout_centerInParent="true"
                                        android:layout_marginTop="@dimen/_3sdp"
                                        android:fontFamily="@font/creem_font"
                                        android:text=""
                                        android:textColor="@color/gray_text"
                                        android:textSize="@dimen/_10sdp"
                                        android:textStyle="italic" />


                                    <LinearLayout
                                        android:id="@+id/data_lay"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_50sdp"
                                        android:layout_below="@+id/reco_decvd"
                                        android:orientation="horizontal"
                                        android:weightSum="3">


                                        <RelativeLayout

                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_margin="@dimen/_3sdp"
                                            android:layout_weight="1">


                                            <RelativeLayout
                                                android:layout_width="1dp"
                                                android:layout_height="match_parent"
                                                android:layout_alignParentEnd="true"
                                                android:background="@color/gray">

                                            </RelativeLayout>

                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:orientation="vertical">

                                                <LinearLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center_horizontal"
                                                    android:orientation="horizontal">


                                                    <ImageView
                                                        android:layout_width="@dimen/_15sdp"
                                                        android:layout_height="@dimen/_15sdp"
                                                        android:background="@drawable/green_star">

                                                    </ImageView>


                                                    <TextView
                                                        android:id="@+id/reco_ratingText"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginStart="@dimen/_2sdp"
                                                        android:fontFamily="@font/creem_font"
                                                        android:gravity="center_horizontal"
                                                        android:text="0.0"
                                                        android:textColor="@color/black"
                                                        android:textStyle="normal">

                                                    </TextView>

                                                </LinearLayout>

                                                <LinearLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center_horizontal">

                                                    <TextView
                                                        android:id="@+id/rating_tvL"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:fontFamily="@font/creem_font"
                                                        android:text="Rating"
                                                        android:textColor="@color/gray_text"
                                                        android:textSize="@dimen/_10sdp">

                                                    </TextView>


                                                </LinearLayout>

                                            </LinearLayout>


                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="0dp"

                                            android:layout_height="match_parent"
                                            android:layout_margin="@dimen/_3sdp"
                                            android:layout_weight="1">

                                            <RelativeLayout
                                                android:layout_width="1dp"
                                                android:layout_height="match_parent"
                                                android:layout_alignParentEnd="true"
                                                android:background="@color/gray">

                                            </RelativeLayout>

                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:orientation="vertical">

                                                <LinearLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center_horizontal"
                                                    android:gravity="center_horizontal">

                                                    <TextView
                                                        android:id="@+id/reco_dev_time_text"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:fontFamily="@font/creem_font"
                                                        android:text="20 Min"
                                                        android:textColor="@color/black">

                                                    </TextView>

                                                </LinearLayout>

                                                <LinearLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content">

                                                    <TextView
                                                        android:id="@+id/dev_time_tvL"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:fontFamily="@font/creem_font"
                                                        android:text="Delivery Time"
                                                        android:textColor="@color/gray_text"
                                                        android:textSize="@dimen/_10sdp">

                                                    </TextView>


                                                </LinearLayout>

                                            </LinearLayout>


                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="0dp"

                                            android:layout_height="match_parent"
                                            android:layout_margin="@dimen/_3sdp"
                                            android:layout_weight="1">


                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:orientation="vertical">

                                                <LinearLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center_horizontal"
                                                    android:gravity="center_horizontal">

                                                    <TextView
                                                        android:id="@+id/reco_order_price"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="match_parent"
                                                        android:fontFamily="@font/creem_font"
                                                        android:text=""
                                                        android:textColor="@color/black">

                                                    </TextView>

                                                </LinearLayout>

                                                <LinearLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center_horizontal"
                                                    android:gravity="center_horizontal">


                                                    <TextView
                                                        android:id="@+id/dev_price_tvL"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"

                                                        android:fontFamily="@font/creem_font"
                                                        android:text="Delivery Price"
                                                        android:textColor="@color/gray_text"
                                                        android:textSize="@dimen/_10sdp">

                                                    </TextView>

                                                </LinearLayout>

                                            </LinearLayout>

                                        </RelativeLayout>


                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/data_lay"
                                        android:orientation="vertical"
                                        android:visibility="visible">

                                        <TextView
                                            android:id="@+id/paymentMethodHeder"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:fontFamily="@font/creem_font"
                                            android:gravity="center"
                                            android:text=""
                                            android:textColor="@color/black">

                                        </TextView>

                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/res_pay_recucler"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"

                                            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                                            app:spanCount="2">

                                        </androidx.recyclerview.widget.RecyclerView>
                                        <!--     <TextView
    android:fontFamily="@font/creem_font"
                                                 android:layout_below="@id/paymentMethodHeder"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"
                                                 android:layout_centerInParent="true"
                                                 android:layout_margin="@dimen/_5sdp"
                                                 android:gravity="center_horizontal"
                                                 android:text="dummy payment Method"
                                                 android:textColor="@color/black">

                                             </TextView>-->


                                    </LinearLayout>

                                </RelativeLayout>


                            </androidx.cardview.widget.CardView>


                        </RelativeLayout>


                        <LinearLayout
                            android:id="@+id/reco_lay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#F3F3F5"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/reco_TV_recoAdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:background="#F3F3F5"
                                android:fontFamily="@font/creem_font"
                                android:text=""
                                android:textColor="@color/black"

                                android:textSize="@dimen/_14sdp"

                                android:textStyle="normal">

                            </TextView>

                            <androidx.recyclerview.widget.RecyclerView

                                android:id="@+id/recoemended_recyclerView"
                                android:layout_width="match_parent"

                                android:layout_height="wrap_content"
                                android:background="#F3F3F5">

                            </androidx.recyclerview.widget.RecyclerView>

                            <FrameLayout

                                android:id="@+id/frm"
                                android:layout_width="match_parent"

                                android:layout_height="wrap_content"
                                android:layout_below="@id/app_bar_layout"
                                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                                <LinearLayout

                                    android:id="@+id/addviewsLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/background_screen"
                                    android:orientation="vertical">


                                    <com.google.android.material.tabs.TabLayout
                                        android:id="@+id/sliding_tabs"
                                        style="@style/MyTabLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_30sdp"
                                        android:layout_margin="@dimen/_5sdp"
                                        android:background="@color/background_screen"
                                        android:visibility="visible"
                                        app:tabBackground="@drawable/tab_background"
                                        app:tabIndicator="@null"
                                        app:tabMode="scrollable"
                                        app:tabSelectedTextColor="@color/white"
                                        app:tabTextColor="#000" />


                                </LinearLayout>

                            </FrameLayout>

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>


            </com.google.android.material.appbar.CollapsingToolbarLayout>


        </com.google.android.material.appbar.AppBarLayout>


        <androidx.recyclerview.widget.RecyclerView


            android:id="@+id/resMenuRecyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop"
            android:src="@drawable/download_new"
            android:visibility="gone"
            app:layout_collapseMode="parallax" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_collapseMode="pin">

            <LinearLayout

                android:id="@+id/resNameView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/restNametxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="@font/creem_font"
                            android:gravity="start"
                            android:maxLines="2"
                            android:tag="@string/robotobold"
                            android:text=""
                            android:textAlignment="viewStart"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            app:textAllCaps="true" />

                        <TextView
                            android:id="@+id/restcusineNameTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/creem_font"
                            android:gravity="start"
                            android:maxLines="2"
                            android:tag="@string/robotobold"
                            android:text=""
                            android:textColor="#a0a0a0"
                            android:textSize="10sp" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/resDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <com.view.DividerView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layerType="software"
                    android:src="@drawable/dotted" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:tint="@color/appThemeColor_1"
                                    app:srcCompat="@drawable/ic_star_black_24dp" />

                                <TextView
                                    android:id="@+id/ratingCntTxt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/creem_font"
                                    android:gravity="center"
                                    android:tag="@string/robotobold"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/txt_size_16" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/ratingdecTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/creem_font"
                                android:gravity="center"
                                android:tag="@string/robotobold"
                                android:text=""
                                android:textColor="#a0a0a0"
                                android:textSize="@dimen/txt_size_12" />

                        </LinearLayout>

                    </LinearLayout>


                    <com.view.DividerView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        app:dividerOrientation="vertical" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/deliveryValTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/creem_font"
                                android:gravity="center"
                                android:tag="@string/robotobold"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/txt_size_16" />

                            <TextView
                                android:id="@+id/deliveryLBLTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/creem_font"
                                android:gravity="center"
                                android:tag="@string/robotobold"
                                android:text=""
                                android:textColor="#a0a0a0"
                                android:textSize="@dimen/txt_size_12" />

                        </LinearLayout>

                    </LinearLayout>

                    <com.view.DividerView
                        android:id="@+id/minDivider"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        app:dividerOrientation="vertical" />

                    <LinearLayout
                        android:id="@+id/minOrderArea"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/minOrderValTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/creem_font"
                                android:gravity="center"
                                android:tag="@string/robotobold"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/txt_size_16" />

                            <TextView
                                android:id="@+id/minOrderLBLTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/creem_font"
                                android:gravity="center"
                                android:tag="@string/robotobold"
                                android:text=""
                                android:textColor="#a0a0a0"
                                android:textSize="@dimen/txt_size_12" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <com.view.DividerView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layerType="software"
                    android:src="@drawable/dotted" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/offerArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/offerMsgTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/creem_font"
                    android:gravity="center"
                    android:maxLines="2"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:tag="@string/robotomediumFont"
                    android:textAlignment="center"
                    android:textColor="#8a584b"
                    android:textSize="@dimen/txt_size_12" />

                <com.view.DividerView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layerType="software"
                    android:src="@drawable/dotted" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/VegNovegFilterArea"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:paddingEnd="15dp"
                android:paddingBottom="5dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/foodTypetxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:fontFamily="@font/creem_font"
                    android:gravity="start|center"
                    android:paddingStart="10dp"
                    android:tag="@string/robotomediumFont"
                    android:text="Veg Only"
                    android:textAlignment="viewStart"
                    android:textAllCaps="true"
                    android:textColor="#515151"
                    android:textSize="@dimen/txt_size_14" />

                <com.kyleduo.switchbutton.SwitchButton
                    android:id="@+id/vegNonVegSwitch"
                    style="@style/SwitchButtonStyle"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

            </LinearLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom">

            <LinearLayout
                android:id="@+id/restaurantViewFloatingBtn"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_above="@+id/bottomCartView"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:background="@drawable/menu_border"
                android:elevation="10dp"
                android:minWidth="110dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="gone"
                app:layout_anchorGravity="bottom|end">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/menuImg"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/menu"
                        android:tint="#5d8fd5" />

                    <TextView
                        android:id="@+id/menutxt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/creem_font"
                        android:gravity="center"
                        android:text="MENU"
                        android:textAllCaps="true"
                        android:textColor="#5d8fd5" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottomCartView"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:background="@color/appThemeColor_1"
                android:orientation="horizontal"
                android:visibility="visible">

                <com.view.CounterFab
                    android:id="@+id/cartFoodImgView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="7dp"
                    android:textSize="6sp"
                    android:tint="@color/white"
                    android:visibility="visible"
                    app:backgroundTint="@android:color/transparent"
                    app:borderWidth="0dp"
                    app:elevation="0dp"
                    app:fabSize="mini"
                    app:rippleColor="@android:color/transparent"
                    app:srcCompat="@drawable/cart_new" />

                <TextView
                    android:id="@+id/viewCartTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:fontFamily="@font/creem_font"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:tag="@string/robotobold"
                    android:text="CheckOut"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="normal" />


                <TextView
                    android:id="@+id/itemNpricecartTxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:fontFamily="@font/creem_font"
                    android:gravity="center|end"
                    android:maxLines="2"
                    android:paddingEnd="@dimen/_15sdp"
                    android:tag="@string/robotobold"
                    android:text="$ 11.00"
                    android:textColor="@color/white"
                    android:textSize="15sp" />


            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dialogsLayoutArea"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#33d4d2d2"
                android:clickable="true" />

            <LinearLayout
                android:id="@+id/dialogsLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <include layout="@layout/open_dialogs" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fabMenuLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="#CC000000"
            android:visibility="gone">

            <View
                android:id="@+id/menubackView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#33d4d2d2"
                android:clickable="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_centerInParent="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="bottom"
                    android:layout_margin="10dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/transparent_border"
                    android:elevation="10dp"
                    android:orientation="vertical">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/menuContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="vertical" />
                    </ScrollView>

                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>