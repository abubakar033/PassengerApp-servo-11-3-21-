<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/closeImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end|top|center"
                android:src="@mipmap/ic_close_detail"
                android:tint="@color/appThemeColor_1"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
android:fontFamily="@font/creem_font"
                    android:id="@+id/passengerDTxt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:textColor="#323232"
                    android:textSize="@dimen/txt_size_18"
                    android:tag="roboto_medium" />

                <TextView
android:fontFamily="@font/creem_font"
                    android:id="@+id/nameTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:layout_toEndOf="@id/seperationLine"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:textColor="#323232"
                    android:textSize="@dimen/txt_size_18" />
            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/passengerDetailArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@drawable/shape"
            android:gravity="center"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="280dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:gravity="center">


                <ImageView
                    android:id="@+id/passengerImgView"
                    android:layout_width="250dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center" />

                <ProgressBar
                    android:id="@+id/LoadingProgressBar"
                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="visible" />

            </FrameLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
