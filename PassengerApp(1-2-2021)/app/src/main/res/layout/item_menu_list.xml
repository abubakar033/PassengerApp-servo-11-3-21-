<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/top_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tagArea"

        android:layout_marginStart="5dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="12dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/presImage"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_medicine"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/vegImage"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/veg"
                    android:visibility="gone" />

                <ImageView

                    android:id="@+id/nonVegImage"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/nonveg"
                    android:visibility="gone" />

                <TextView
android:fontFamily="@font/creem_font"
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:gravity="start|center"
                    android:maxLines="2"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_size_14"
                    android:tag="@string/robotomediumFont" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:orientation="vertical"
                android:paddingStart="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
android:fontFamily="@font/creem_font"
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"

                        android:textColor="@color/Gray"
                        android:textSize="@dimen/txt_size_12"
                        android:textStyle="normal"
                        android:tag="@string/robotobold" />

                    <TextView
android:fontFamily="@font/creem_font"
                        android:id="@+id/offerPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"

                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_size_12"
                        android:tag="@string/robotobold" />

                </LinearLayout>

                <TextView
android:fontFamily="@font/creem_font"
                    android:id="@+id/desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text=""
                    android:textColor="#a0a0a0"
                    android:textSize="@dimen/txt_size_12"
                    android:tag="@string/robotolightFont" />


                <TextView
android:fontFamily="@font/creem_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="#ff0000"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="offer"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_14"
                    android:textStyle="normal"
                    android:visibility="gone" />
            </LinearLayout>


        </LinearLayout>

        <TextView
android:fontFamily="@font/creem_font"
            android:id="@+id/addBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:layout_weight="0.3"

            android:background="@color/appThemeColor_1"
            android:padding="5dp"
            android:text="Add"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:tag="@string/robotomediumFont" />


    </LinearLayout>

    <View
        android:id="@+id/bottomLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/top_area"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:background="@color/disable_color" />


    <LinearLayout

        android:id="@+id/tagArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:visibility="gone">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:backgroundTint="#f59c15"
            android:orientation="vertical">

            <TextView
android:fontFamily="@font/creem_font"
                android:id="@+id/tagTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rectangle"
                android:backgroundTint="#f59c15"

                android:paddingStart="5dp"
                android:paddingTop="2dp"
                android:paddingEnd="5dp"
                android:paddingBottom="2dp"
                android:text="Best Seller"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_10"
                android:visibility="visible"
                android:tag="@string/robotomediumFont" />

        </LinearLayout>


        <ImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginStart="40dp"
            android:rotation="180"
            android:tint="#f59c15"
            app:srcCompat="@drawable/triangle">

        </ImageView>
    </LinearLayout>

</RelativeLayout>