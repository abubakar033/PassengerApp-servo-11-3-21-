<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:elevation="0dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/appThemeColor_1"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:layout_scrollFlags="scroll|enterAlways">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/menuImgView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_weight="0"
                android:clickable="true"
                android:src="@mipmap/ic_drawer_menu"
                android:tint="@color/white"
                android:visibility="gone" />

            <ImageView

                android:id="@+id/backImgView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0"
                android:src="@mipmap/ic_back_arrow"
                android:tint="@color/appThemeColor_TXT_1" />

            <ImageView
                android:id="@+id/headerLogo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingEnd="50dp"
                android:src="@mipmap/logo"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
android:fontFamily="@font/creem_font"
                    android:id="@+id/titleTxt"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:paddingStart="10dp"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textColor="@color/appThemeColor_TXT_1"
                    android:textSize="@dimen/txt_size_18"
                    android:tag="roboto_light" />

                <TextView
android:fontFamily="@font/creem_font"
                    android:id="@+id/subtitleTxt"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:paddingStart="10dp"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textColor="@color/appThemeColor_TXT_1"
                    android:textSize="@dimen/txt_size_18"
                    android:visibility="gone"
                    android:tag="roboto_light" />
            </LinearLayout>

            <TextView
android:fontFamily="@font/creem_font"
                android:id="@+id/subTitleTxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end|center_vertical"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textAlignment="viewEnd"
                android:textColor="@color/appThemeColor_TXT_1"
                android:textSize="@dimen/txt_size_16"
                android:visibility="gone"
                android:tag="roboto_light" />

            <TextView
android:fontFamily="@font/creem_font"
                android:id="@+id/addVehicleTxtView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/mdtp_white"
                android:textSize="40sp"
                android:textStyle="normal"
                android:visibility="gone"
                android:tag="roboto_light" />

            <ImageView
                android:id="@+id/rightImgView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:tint="@color/white"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_add_circle"
                tools:ignore="VectorDrawableCompat" />


            <ImageView
                android:id="@+id/searchImgView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:tint="@color/white"
                android:visibility="gone"
                app:srcCompat="@drawable/places_ic_search"
                tools:ignore="VectorDrawableCompat" />


            <ImageView
                android:id="@+id/logoutImageview"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0"
                android:padding="10dp"
                android:src="@mipmap/ic_menu_logout"
                android:tint="@color/appThemeColor_TXT_1"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/filterImageview"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0"
                android:padding="10dp"
                android:src="@mipmap/ic_filter_list_history"
                android:tint="@color/appThemeColor_TXT_1"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/cardioview"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0"
                android:padding="10dp"
                android:src="@mipmap/ic_camera"
                android:tint="@color/appThemeColor_TXT_1"
                android:visibility="gone" />
        </LinearLayout>


    </androidx.appcompat.widget.Toolbar>
</com.google.android.material.appbar.AppBarLayout>