<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="12dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingEnd="15dp"
        android:paddingStart="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
android:fontFamily="@font/creem_font"
                android:id="@+id/itemNameTxtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:gravity="start|center_vertical"
                android:maxLines="1"
                android:textAlignment="viewStart"
                android:textColor="#333333"
                android:textSize="@dimen/txt_size_16"
                android:tag="@string/robotoRegular" />

            <TextView
android:fontFamily="@font/creem_font"
                android:id="@+id/itemMenuNameTxtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginTop="2dp"
                android:gravity="start|center_vertical"
                android:textAlignment="viewStart"
                android:textColor="#666666"
                android:textSize="@dimen/txt_size_12"
                android:visibility="gone"
                android:tag="@string/robotoRegular" />
        </LinearLayout>

        <TextView
android:fontFamily="@font/creem_font"
            android:id="@+id/QTYNumberTxtView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingStart="10dp"
            android:textColor="#333333"
            android:textSize="@dimen/txt_size_16"
            android:tag="@string/robotobold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingStart="10dp">

            <TextView
android:fontFamily="@font/creem_font"
                android:id="@+id/itemstrikePriceTxtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end|bottom"
                android:textAlignment="viewEnd"
                android:textColor="@color/gray"
                android:textSize="@dimen/txt_size_12"
                android:visibility="gone"
                android:tag="@string/robotomediumFont" />

            <TextView
android:fontFamily="@font/creem_font"
                android:id="@+id/itemPriceTxtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end|bottom"
                android:textAlignment="viewEnd"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_14"
                android:tag="@string/robotoRegular" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/itemview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#ededed" />


</LinearLayout>
