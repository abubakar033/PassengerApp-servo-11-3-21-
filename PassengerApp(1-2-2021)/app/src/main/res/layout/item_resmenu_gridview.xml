<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/grid_border"
        android:orientation="vertical">

        <com.view.SelectableRoundedImageView
            android:id="@+id/menuImage"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_above="@+id/bottomarea"
            app:sriv_left_top_corner_radius="5dp"
            app:sriv_right_top_corner_radius="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:paddingEnd="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">

                <ImageView
                    android:id="@+id/presImage"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_medicine" />

                <ImageView
                    android:id="@+id/vegImage"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:src="@drawable/veg"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/nonVegImage"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:src="@drawable/nonveg"
                    android:visibility="gone" />

                <TextView
android:fontFamily="@font/creem_font"
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:gravity="start|center"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_size_12"
                    android:tag="@string/robotomediumFont" />

            </LinearLayout>


            <TextView
android:fontFamily="@font/creem_font"
                android:id="@+id/vCategoryNameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="5dp"
                android:gravity="start|center"
                android:maxLines="1"
                android:textColor="#a0a0a0"
                android:textSize="10sp"
                android:tag="@string/robotomediumFont" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomarea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
android:fontFamily="@font/creem_font"
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:textColor="@color/Gray"
                        android:textSize="@dimen/txt_size_12"
                        android:textStyle="normal"
                        android:tag="@string/robotoRegular" />


                    <TextView
android:fontFamily="@font/creem_font"
                        android:id="@+id/addBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:background="@color/appThemeColor_1"
                        android:padding="4dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:text="Add"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:tag="@string/robotomediumFont" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/tagImage"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/tag"
        android:visibility="visible" />


    <TextView
android:fontFamily="@font/creem_font"
        android:id="@+id/tagTxt"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:gravity="start|center"
        android:maxLines="1"
        android:text="Recommendessssdfsdfs"
        android:textAlignment="viewStart"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:tag="@string/robotomediumFont" />


</RelativeLayout>
